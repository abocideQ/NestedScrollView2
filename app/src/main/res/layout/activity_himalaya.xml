<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.HimalayaActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />

                <View
                    android:id="@+id/v_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/ll_content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/v_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll2_content2"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_content2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/purple_200"
                    android:src="@mipmap/ic_launcher" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tl_content2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/purple_200" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>